{
  "compilerOptions": {
    "target": "es2015",
    "module": "amd",
    "declaration": true,
    "outFile": "lib/index.js",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
